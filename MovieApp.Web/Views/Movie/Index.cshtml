@model IEnumerable<MovieApp.Web.Models.Movie>

@{
    ViewData["Title"] = "Film Listesi";
}

<h2>Film Listesi</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Film Ekle</a>
</p>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<table class="table" id="movieList">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Director)</th>
            <th>@Html.DisplayNameFor(model => model.Point)</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Director)</td>
                <td>@Html.DisplayFor(modelItem => item.Point)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detay</a>
                </td>
            </tr>
        }
    </tbody>
</table> 